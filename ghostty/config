# Font settings
font-family = JetBrainsMono Nerd Font Mono
font-size = 12


# Themes (light/dark switching capability from WezTerm)
theme = GruvboxDark

# Split management keybinds
keybind = alt+minus=new_split:down
keybind = alt+equal=new_split:right


gtk-titlebar = false
gtk-wide-tabs = false

macos-non-native-fullscreen = true
macos-option-as-alt = true
shell-integration-features = no-cursor


# Window focus (hjkl navigation like WezTerm)
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up
keybind = alt+l=goto_split:right

keybind = alt+v=write_screen_file:open

# Window resizing (HJKL resizing like WezTerm)
keybind = alt+shift+h=resize_split:left,50
keybind = alt+shift+j=resize_split:down,50
keybind = alt+shift+k=resize_split:up,50
keybind = alt+shift+l=resize_split:right,50
